<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Any Sql Runner</title>
    <style>
         body{
            background-color: rgb(235, 233, 221);
        }
        table{
            border-collapse: collapse;
            font-size: 0.6rem;
            margin-bottom: 10px;
        }
        table tr td,th{
            padding: 10px;
        }
        td a{
            text-decoration: none;
            background-color: orange;
            border: 2px solid black;
            padding: 5px;
            color: black;
        }
        .home{
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
        }
        a{
            text-decoration: none;
            background-color: orange;
            border: 2px solid black;
            padding: 5px;
            color: black;
        }
        .btn{
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
            gap: 20px;
            margin-top: -40px;
        }
        .btn input{
            text-decoration: none;
            background-color: orange;
            border: 2px solid black;
            padding: 5px;
            color: black;
            text-align: center;
            width: 30px;
        
        }
        .order{
            display: flex;
            align-items: center;
            justify-content: center; 
            margin-bottom: 10px;
        }
        #form{
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            margin-bottom: 10px;
        }
        #form input[type  = "submit"]{
            background-color: orange;
            border: 2px solid black;
        }
    </style>
</head>
<body>
    <h1 align="center">Database Details</h1>
    <h2 align="center">List of table</h2>
    <table border="1" align="center">
        <tr>
            <% table.forEach( (row) => { %>
                <% for (const key in row){%>
                <td><%= row[key] %></td>
            <% } %>
                <% }) %>
            </tr>
        </table>
        <form action="/sql/main" method="post" id="form">
            <label for="">Select Operation of Query</label>
            <select name="opt" id="opt">
                <option value="select" selected>Select</option>
                <option value="other">other</option>
            </select>
           <label for="sql">Enter Sql Query</label>
           <input type="text" name="query" id="query" required>
           <input type="submit" value="Go">
        </form>
     <table border="1" align="center">
            <tr>
                <% keys.forEach( (row) => { %>
                <th><%= row %></th>
                <% }) %>
            </tr>
            <% result.forEach( (r) => { %>
           </tr>
           <tr>
            <% for (const key in r){%>
                <td><%= r[key] %></td>
            <% } %>
            </tr>
            <% }) %>
      </table>
      <div class="btn">
        <div>
            <h3>Showing <%= first  %> to <%= last %> of <%= tot  %> entries</h3>
            <input type="hidden" name="" id="total" value="<%= tot/10 %>">
        </div>
      <a href="/sql/ofirst/<%= sql %>" onclick="first()" id="first"><<</a>
      <a href="/sql/oprev/<%= i  %>/<%= sql  %>" onclick="prev()" id="prev"><</a>
      <input type="text" value="<%= i %>" id="page" disabled>
      <a href="/sql/onext/<%= i  %>/<%= sql %>" onclick="next()" id="next">></a>
      <a href="/sql/olast/<%= sql %>" onclick="last()" id="last">>></a>
    </div>

    
</body>
<script>
     var page = document.getElementById('page');
     var total = document.getElementById('total');
        if(page.value == 1){
            document.getElementById('first').style.pointerEvents = 'none';
            document.getElementById('prev').style.pointerEvents = 'none';
        }
        if(total.value < 1){
            document.getElementById('last').style.pointerEvents = 'none';
            document.getElementById('next').style.pointerEvents = 'none';
            console.log(total.value);
        }
        if(page.value == total.value){
            document.getElementById('last').style.pointerEvents = 'none';
            document.getElementById('next').style.pointerEvents = 'none';
        }
</script>
</html>